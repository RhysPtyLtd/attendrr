<%# Notifications %>
<% rank_notification_required = false %>
<% current_club.activities.where(active: true).each do |a| %>
  <% unless a.ranks.any? %>
    <% rank_notification_required = true %>
    <% break %>
  <% end %>
<% end %>
<% if current_club.activities.where(active: true).none? %>
  <%= link_to("Welcome to Attendrr! First, click here to add a class", new_activity_path) %>
<% elsif rank_notification_required %>
  <%= link_to("There are classes without ranks! Click here to add ranks", activities_path) %>
<% elsif current_club.payment_plans.where(active: true).count-1 == 0 %>
  <%= link_to("Now you need to add at least one payment plan! Click here", new_payment_plan_path) %>
<% elsif current_club.students.where(active: true).none? %>
  <%= link_to("It's time to grow your club! Add your first student here", new_student_path) %>
<% elsif @students.count - @prospects.count == 0 %>
  <%= link_to("You convert Prospects into Students by upgrading their payment plan. You can do it!", prospects_students_path) %>
<% end %>
<%# End notification %>
