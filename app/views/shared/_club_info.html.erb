<h1><%= current_club.name %></h1>
<%= image_tag current_club.picture.url if current_club.picture? %>
<span><%= link_to "View club details", current_club %></span>

<span>Students: <%= link_to @students.count, students_path %>
(<%= link_to pluralize(@active_prospects.count, 'prospect'),prospects_students_path %> ) </span>
<span><%= link_to("Add new student", new_student_path) %></span>

<span>Classes: <%= link_to current_club.activities.where(active: true).count, activities_path %></span>

<span>Payment plans: <%= link_to current_club.payment_plans.where(active: true).count-1, payment_plans_path %></span>
<span><%= link_to("Scheduled classes", scheduled_classes_activities_path) %></span>
<span><%= link_to("Metrics", metrics_path) %></span>
<% absent_students = 0 %>
<% @students.each do |s| %>
	<ul>
		<% if s.last_attendance < @absent_alert_activation_date %>
			<% absent_students += 1 %>
		<% end %>
	</ul>
<% end %>
Absent students: <%= link_to absent_students, absents_students_path %> 