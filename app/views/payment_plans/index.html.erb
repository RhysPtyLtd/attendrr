<% @payment_plans.where(active: true).each do |pp| %>
	<%= pp.name %> (<%= pp.students.count %> members)<br>
	<% if pp.name != 'Prospect' %>
		<% if pp.frequency == 'Per class' %>
			<%= number_to_currency(pp.price, unit: "$") %> per <%= pluralize(pp.classes_amount, "class") %>
		<% else %>
			<%= number_to_currency(pp.price, unit: "$") %> <%= pp.frequency.downcase %>
		<% end %>
	<% end %>
	<% if pp.name != 'Prospect' %>
		<%= link_to "Delete", payment_plan_path(pp, payment_plan: { active: false }), method: :put, data: { confirm: "Are you sure?" } %> | 
		<%= link_to "Edit", edit_payment_plan_path(pp) %>
		Daily value: $<%= pp.daily_value %><br>
	<% end %>
<% end %>

<span><%= link_to("Add new payment plan", new_payment_plan_path) %></span>