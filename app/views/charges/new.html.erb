<br><br><br><br>

<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
  <%= @subscription.name %><br>
  Student limit: <%= @subscription.student_limit %><br>
  <%= @subscription.description %><br>
    <label class="amount">
      <span>Amount: <%= pretty_amount(@cost) %></span>
    </label>
  </article>

  

  <%= hidden_field_tag :subscription, value: params[:subscription] %>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="<%= @description %>"
          data-amount="<%= @amount %>"
          data-email="<%= current_club.email %>"
          data-locale="auto">
  </script>
<% end %>