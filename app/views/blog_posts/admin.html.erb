<section class="acivities-list">
	<% provide(:title, "Blog") %>
	<div class="container">
		<div class="row mt-5">
			<div class="col-12 col-md-4">
				<h1 class="text-md-left text-center">Blog posts</h1>
			</div>
		</div>
			<% @blog_posts.each do |bp| %>
				<div class="row mt-4">
					<div class="col-12 col-md-6  p-3 class-box  mt-1">
						<span><%= link_to bp.title, blog_post_path(bp),class:'class-name' %></span>
						<p><%= bp.subtitle %></p> <%= link_to "Edit", edit_blog_post_path(bp), class: "nav_link custom-link" %> 
						<%= link_to "Delete this post", bp, method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "btn btn-danger" %>
						
					</div>
				</div>
			<% end %>
	</div>
</section>