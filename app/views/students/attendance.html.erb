<section class="attandance-page ">
	<div class="container mt-5">
			<div class="row text-center center-block ">
				<div class="col-12 d-flex justify-content-center">
					<h4 class="attandance-date"><%= link_to(@date_find.strftime("%A, #{@date_find.day.ordinalize} %B %Y"), scheduled_classes_activities_path(search: @date_find)) %></h4>
				</div>
			</div>
			<div class="row mt-3">
				<div class=" offset-md-1 col-sm-5 offset-sm-1 "   id="absent">
					<%= render 'absent_student' %>
				</div>
				<div class="offset-md-1 col-sm-5  mt-md-0 mt-3 mt-sm-0 offset-sm-1"   id="present">
					<%= render 'present_student' %>
				</div>
			</div>

			<div id="myModal" class="modal fade" role="dialog">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
						</div>
						<div class="modal-body" id = "body" style = "text-align: center;font-size: large;">
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-success" data-dismiss="modal">OK</button>
						</div>
					</div>
				</div>
			</div>
			<div class="confirm-attendance-alignment">
				<%= link_to 'Confirm', :back, class: "btn btn-success confirm-attendance-btn" %>
			</div>
	</div>
</section>


<script type="text/javascript">

    $(function () {
        $('#datetimepicker4').datetimepicker({
        	format: 'DD/MM/YYYY'
        });
    });
</script>

<style type="text/css">
	.confirm-attendance-btn {
		width: 174px;
	    font-size: 22px;
	    height: 50px;
	    margin-left: 8%;
	}
	.confirm-attendance-alignment {
	    text-align: center;
    	padding: 50px;
	}
</style>
