<section class="studentList">
	<% provide(:title, "Absents") %>
	<div class="container mt-5">
		<div class="row">
			<div class="col-12 d-flex justify-content-start  mt-2 mb-2">
				<h1 style="margin-bottom:0px;">Absent students</h1>
			</div>
		</div>
		
		<% i = true %>
		<% @students.each do |s| %>
			<% if s.last_attendance < @absent_alert_activation_date %>
				<div class="row">
				<div class="col-md-6 col-12 ">
				<%= link_to student_path(s), :class=>"student_div" do %>
					<div class="student d-flex justify-content-start align-content-center mt-2 mb-2">
						<div class="align-self-center m-2">
							<% if s.picture? %>
								<img class="student_img align-self-center" <%= image_tag s.picture.url  %>
							<% else %>
								<img class="student_img align-self-center" <%= image_tag("no_picture.jpg") %>
							<% end %>
						</div>
						<div class="align-self-center pl-2">
							<span class="student_name"> <%= s.first_name + " " + s.last_name %> has not trained since <%= s.last_attendance.strftime("%d/%m/%Y") %></span>
						</div>
					</div>
				<% end %>
			</div>
			</div>
		<% i = false %>
		<% end %>
		<% end %>
		<% if i %>
			<%= "None of your students have been absent in more than #{@absent_alert_activation_date} days! Well done!" %>
		<% end %>

</section>