<%= stylesheet_link_tag 'signup', media: 'all' %>

<div class="signup-container"> 
	<div class="signup-child-container">
		<a href="/login">
		    <img class="login-img" src=<%=image_url('login-signup-icon.png') %>  alt="" >
		</a>
  <header class="signup-header">
		    <h1 class="signup-title">Sign Up</h1>
		</header>

		<%= form_for(@club, html: {:class => 'signup-form',  multipart: true }) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
		  		
	  		<div class="signup-input-field">
				<i class="fa fa-university icon"></i>
				<%= f.text_field :name, placeholder: "Club name *" , class: 'signup-form-input input-field' %>
			</div>

		  	<div class="signup-input-field">
				<i class="fa fa-user icon"></i>
				<%= f.text_field :owner_first_name, placeholder: "Owner first name *" , class: 'signup-form-input input-field' %>
			</div>

			<div class="signup-input-field">
				<i class="fa fa-user icon"></i>
				<%= f.text_field :owner_last_name, placeholder: "Owner last name *" , class: 'signup-form-input input-field' %>
			</div>


			<div class="signup-input-field">
				<i class="fa fa-envelope icon"></i>
				<%= f.email_field :email, placeholder: "Email *" , class: 'signup-form-input input-field' %>
			</div>

			<span style="color: white;font-weight: bold;">Street address, P.O. box, company name, etc.</span>
		    <div class="signup-input-field">
				<i class="fa fa-address-card icon"></i>
				<%= f.text_field :address_line_1, placeholder: "Address line 1 *" , class: 'signup-form-input input-field' %>
			</div>

	        <span style="color: white;font-weight: bold;">Apartment, suite, unit, building, floor, etc.</span>
			<div class="signup-input-field">
				<i class="fa fa-address-card icon"></i>
				<%= f.text_field :address_line_2, placeholder: "Address line 2", class: 'signup-form-input input-field' %>
			</div>

			<div class="signup-input-field">
				<i class="fa fa-map-marker icon"></i>
				<%= f.text_field :city, placeholder: "City *", class: 'signup-form-input input-field' %>
			</div>

			<div class="signup-input-field">
				<i class="fa fa-map-marker icon"></i>
				<%= f.text_field :state, placeholder: "State *", class: 'signup-form-input input-field' %>
			</div>

			<div class="signup-input-field">
				<i class="fa fa-map-marker icon"></i>
				<%= f.number_field :postcode, placeholder: "Postcode *", class: 'signup-form-input input-field' %>
			</div>

			<div class="signup-input-field">
				<i class="fa fa-globe icon"></i>
				<%= f.text_field :country, placeholder: "Country *", class: 'signup-form-input input-field' %>
			</div>

			<div class="signup-input-field">
				<i class="fa fa-phone icon"></i>
				<%= f.phone_field :phone1, placeholder: "Primary phone *", class: 'signup-form-input input-field' %>
			</div>

			<div class="signup-input-field">
				<i class="fa fa-phone icon"></i>
				<%= f.phone_field :phone2, placeholder: "Secondary phone", class: 'signup-form-input input-field' %>
			</div>

			<span style="color: white;font-weight: bold;">Notification when a student hasn't trained for more than this many days</span>
			<div class="signup-input-field">
				<i class="fa fa-bell icon"></i>
				<%= f.number_field :absent_alert, class: 'signup-form-input input-field' %>
			</div>

			<div class="signup-input-field">
				<i class="fa fa-key icon"></i>
				<%= f.password_field :password, placeholder: "Password *", class: 'signup-form-input input-field' %>
			</div>

			<div class="signup-input-field">
				<i class="fa fa-key icon"></i>
				<%= f.password_field :password_confirmation, placeholder: "Confirm password *", class: 'signup-form-input input-field' %>
			</div>


			<span class="picture" style="color: white;font-weight: bold;">
				<%= f.label :picture, "Attach club logo" %>
				<%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
			</span>

			<%= f.submit "Register", class: "signup-register-btn btn-primary" %>
			
			<%= f.fields_for :payment_plans do |payment_plans| %>
				<%= payment_plans.hidden_field :name, value: "Prospect" %>
				<%= payment_plans.hidden_field :price, value: 0 %>
				<%= payment_plans.hidden_field :frequency, value: "Per class" %>
				<%= payment_plans.hidden_field :classes_amount, value: 1 %>
			<% end %>
		<% end %>

		<!-- JQuery. Ensures files size is < 5MB client-side -->
		<script type="text/javascript">
		  $('#club_picture').bind('change', function() {
		    var size_in_megabytes = this.files[0].size/1024/1024;
		    if (size_in_megabytes > 5) {
		      alert('Maximum file size is 5MB. Please choose a smaller file.');
		    }
		  });

		</script>
	</div>
</div>