<p id="notice"><%= notice %></p>

<h1>Blog Images</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_images.each do |blog_image| %>
      <tr>
        <td><%= image_tag blog_image.image_data_url, :height => '300' %></td>
        <td><%= link_to 'Show', blog_image %></td>
        <td><%= link_to 'Edit', edit_blog_image_path(blog_image) %></td>
        <td><%= link_to 'Destroy', blog_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog Image', new_blog_image_path %>
