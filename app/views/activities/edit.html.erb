<%= form_for(@activity) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.label :name, "Class name" %>*
		<%= f.text_field :name, class: 'form-control' %>

		<%= f.label :active, "Status" %><br>
		<%= f.label :active, "Activated", :value => "true" %>
		<%= f.radio_button :active, true, :checked => true	 %>
		<%= f.label :active, "Deactivated", :value => "false" %>
		<%= f.radio_button :active, false %>
	</div>
	<%= f.submit "Edit details", class: "btn btn-primary" %>
<% end %>
<%= link_to "Delete class", @activity, method: :delete, data: { confirm: "Please note: only delete classes that were entered erroneously. To remove a class that is no longer active select the 'deactivate' button. Are you sure you want to delete this class?"} %>