
<section class="acivities-list">
	<div class="container">
		<div class="row mt-5">
			<div class="col-12 col-md-4">
				<h1 class="text-md-left text-center">Class List</h1>
			</div>
			
		</div>
			
			<% @activities.where(active: true).each do |a| %>
				<div class="row mt-4">
					<div class="col-12 col-md-6  p-3 class-box  mt-1">
						<span><%= link_to a.name, activity_path(a),class:'class-name' %></span>
						<% unless a.ranks.where(active: true).any? %> <%= link_to "This class has no ranks! Add ranks here", edit_activity_path(a) ,class:'add-rank-link'%> <% end %>
					</div>
				</div>
			<% end %>

			<div class="addNewClassBtn">
				<span class="add_new_student align-self-center"><%= link_to("Add new class", new_activity_path) %></span>
			</div>
	</div>
</section>
